<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_emote"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#CCCCCC"
                android:gravity="center"
                android:textSize="24sp"
                tools:text="ðŸ§€" />

            <TextView
                android:id="@+id/txt_product"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignTop="@id/txt_emote"
                android:ellipsize="marquee"
                tools:text="Queijo brsie gostoasdasdsin"
                android:layout_toRightOf="@id/txt_emote" />

            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/txt_emote"
                android:layout_below="@id/txt_product"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="1 - "
                />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_quantity"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/txt_quantity"
                android:gravity="center_vertical"
                android:textSize="16dp"
                tools:text="Frios" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            >

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_buttons_corners"
                android:gravity="center"
                android:text="OK"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:backgroundTint="#FA2F2F"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_buttons_corners"
                android:gravity="center"
                android:text="X"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>